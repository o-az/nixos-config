// https://zed.dev/docs/configuring-zed#settings-files
{
  "load_direnv": "direct",
  "ui_font_size": 14,
  "file_icons": true,
  "auto_update": true,
  "use_autoclose": true,
  "format_on_save": "on",
  "buffer_font_size": 16,
  "theme": "Base16 Chalk",
  "use_auto_surround": true,
  "show_call_status_icon": true,
  "show_inline_completions": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "lsp": {
    "nixd": {
      "binary": {
        "ignore_system_version": false
      },
      "settings": {
        "diagnostic": {
          "suppress": [
            "sema-extra-with"
          ]
        }
      }
    }
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "supermaven"
  },
  "terminal": {
    "env": {},
    "shell": {
      "program": "fish"
    },
    "toolbar": {
      "show": true,
      "title": true
    },
    "button": true,
    "font_size": 15,
    "dock": "bottom",
    "font_weight": 300,
    "font_features": {},
    "line_height": "standard",
    "font_family": "BlexMono Nerd Font Mono",
    "working_directory": "current_project_directory"
  },
  "gutter": {
    "folds": true,
    "runnables": false,
    "code_actions": false,
    "line_numbers": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "auto_install_extensions": {
    "nix": true,
    "env": true,
    "fish": true,
    "just": true,
    "toml": true,
    "biome": true
  }
}
