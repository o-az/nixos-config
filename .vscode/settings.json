{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": {
    "nixd": {
      "formatting": {
        "command": [
          "nixfmt",
          "--width=100",
        ],
      }
    }
  },
  "files.associations": {
    ".env": "dotenv",
    ".env.*": "dotenv",
    ".envrc": "shellscript",
    ".vscode/*.json": "jsonc"
  },
  "search.exclude": {
    "**/flake.lock": true
  },
  "files.exclude": {
    "result": true,
    ".direnv": true,
  },
}
