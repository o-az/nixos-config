{
  "enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nix.serverSettings": {
    "nixd": {
      "formatting": {
        "command": [
          "nixfmt",
          "--width=100",
        ],
      }
    }
  },
  "files.associations": {
    ".env": "dotenv",
    ".env.*": "dotenv",
    ".zed/*.json": "jsonc",
    ".envrc": "shellscript",
    "fish_plugins": "fish",
    "fish_variables": "fish",
    ".vscode/*.json": "jsonc",
  },
  "search.exclude": {
    "**/flake.lock": true
  },
  "files.exclude": {
    "result": true,
    ".direnv": true,
  },
  "markdownlint.config": {
    "first-line-h1": false
  }
}